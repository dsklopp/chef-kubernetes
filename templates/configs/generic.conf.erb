apiVersion: v1
clusters:
- cluster:
    certificate-authority: <%= @cert_auth %>
    server: <%= @master_cname %>
  name: kubernetes
contexts:
- context:
    cluster: kubernetes
    user: <%= @user %>
  name: <%= @email %>
current-context: <%= @email %>
kind: Config
preferences: {}
users:
- name: <%= @user %>
  user:
    client-certificate: <%= @client_cert %>
    client-key: <%= @client_key %>
